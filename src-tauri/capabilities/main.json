{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Основные разрешения для главного окна",
  "windows": ["*"],
  "permissions": [
    "core:default",
    "core:window:allow-set-title",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "fs:default",
    "fs:allow-read-dir",
    "fs:allow-read-file",
    "fs:allow-read-text-file",
    "fs:allow-write-file",
    "fs:allow-write-text-file",
    "fs:allow-remove",
    "fs:write-all",
    "fs:read-all",
    "updater:default",
    "updater:allow-check"
  ]
}

